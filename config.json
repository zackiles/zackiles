        "user": "zack",
        "host": "machine",
        "symbol": ":~$"
      },
      "command": "whois",
      "timing": {
        "start": 2,
        "perChar": 0.2,
        "hold": 2
      }
    },
    {
      "terminalLines": [
        "/COUNTRY & CITY",
        "Canada",
        "",
        "/LANGUAGES",
        "Typescript, Go, Rust"
      ],
      "shellPrompt": {
        "user": "zack",
        "host": "machine",
        "symbol": ":~$"
      },
      "command": "clear",
      "timing": {
        "start": 6,
        "perChar": 0.2,
        "hold": 3
      }
    }
  ]
