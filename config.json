// Example of configuration with json instead of composer.ts

{
  "width": 800,
  "height": 200,
  "fontFamily": "Courier New, monospace",
  "fontSize": 18,
  "colors": {
    "bg": "black",
    "terminalLines": "#00FF00",
    "user": "#00ffff",
    "host": "#ffaa00",
    "path": "#ffaa00",
    "symbol": "#ffffff",
    "command": "#ffffff"
  },
  "charWidth": 11,
  "steps": [
    {
      "terminalLines": [
        "/PROJECTS",
        "deno-kit",
        "luna-ai",
        "cursor-config",
        "cursor-workbench",
        "cdp-proxy-interceptor",
        "git-vault"
